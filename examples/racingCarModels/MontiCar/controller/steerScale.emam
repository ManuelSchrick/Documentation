package controller;

component SteerScale{
	
	ports
		in Q(-oo : 0.0001 : oo) unscaledSteering,
		
		out Q(-45°:0.001°:45°) steering;
		
	implementation Math{
		if(unscaledSteering < -45){
			steering = -45;
		}elseif(unscaledSteering > 45){
			steering = 45;
		}else{
			steering = unscaledSteering;
		}
	}
}