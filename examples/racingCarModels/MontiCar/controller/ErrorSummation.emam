package controller;

component ErrorSummation{

	ports
		in Q(-oo : 0.0001 : oo) error1,
		in Q(-oo : 0.0001 : oo) error2,
		in Q(-oo : 0.0001 : oo) error3,
		
		out Q(0 : 0.0001 : oo) errorSum;
		
	implementation Math{
		if(error1 < 0){
			error1 = -error1;
		}
		if(error2 < 0){
			error1 = -error1;
		}
		if(error3 < 0){
			error1 = -error1;
		}
		
		errorSum = error1 + error2 + error3;
		
	}
}	