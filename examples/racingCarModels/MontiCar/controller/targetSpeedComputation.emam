package controller;
component TargetSpeedComputation( Z(0:1:19) lookaheadDist){
	ports 
		in Q(0 m/s : 0.001 m/s : 75 m/s) maxSpeed[20],
		in Q(0 m/s : 0.001 m/s : 75 m/s) allowedSpeed,

		out Q(0 m/s : 0.001 m/s : 75 m/s)  desiredSpeed;

	implementation Math{
		Q(0 m/s : 0.001 m/s : 75 m/s) minSpeed = 75 m/s;
		forall i in 0..lookaheadDist: 
			if allowedSpeed(trackSegs[i] < minSpeed {
				minSpeed = allowedSpeed(trackSegs[i]);
			}
		
		desiredSpeed = minSpeed;
	}
}